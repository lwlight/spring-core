<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util" xmlns:c="http://www.springframework.org/schema/c"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
       default-lazy-init="false">

    <import resource="loggers.xml"/>
    <context:annotation-config/>
    <context:component-scan base-package="com.epam.lab.spring.core.work"/>

    <util:map id="loggerMap">
        <entry key="INFO" value-ref="eventLogger"/>
        <entry key="ERROR" value-ref="combinedLogger"/>
    </util:map>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:client.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
    </bean>

    <bean id="client" class="com.epam.lab.spring.core.work.Client"
         c:id="${id}" c:fullName="${name}" p:greeting="${greeting}">
        <!--<constructor-arg value="${id}"/>-->
        <!--<constructor-arg value="${name}"/>-->
        <!--<property name="greeting" value="${greeting}"/>-->
    </bean>

    <bean id="app" class="com.epam.lab.spring.core.work.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="fileLogger"/>
        <constructor-arg ref="loggerMap"/>
    </bean>

    <bean id="event" scope="prototype" class="com.epam.lab.spring.core.work.Event">
        <constructor-arg>
            <bean class="java.util.Date"></bean>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>



</beans>